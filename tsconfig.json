{
  "compilerOptions": {
    "target": "ES2019",
    "incremental": true,
    "module": "commonjs",
    "declaration": true,
    "sourceMap": false,
    "outDir": "./lib",
    "rootDir": "./src",
    "isolatedModules": true,
    "removeComments": true,

    "strict": true,
    "alwaysStrict": true,

    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ]
}
